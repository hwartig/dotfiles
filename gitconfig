	name = Harald Wartig
	email = hwartig@gmail.com
[color]
	ui = 1
[github]
	user = hwartig
[merge]
	tool = vimdiff
[alias]
  d  = diff
  dc = diff --cached
  cm = commit -m
  ca = commit --amend
	co = checkout
	br = branch
	b  = branch
	ci = commit
	st = status -sb
	s  = status -sb
  pr = pull --rebase
	count = shortlog -sn
	undo = reset --soft HEAD^
	amend = commit --amend
	unstage = reset HEAD --
	credit = commit --amend --author "$1 <$2>"
	last = log -1 HEAD
  lg = log --oneline --decorate
	visual = giggle

  head = rev-parse --abbrev-ref HEAD
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all

[diff]
	tool = vimdiff
[difftool]
	prompt = false
[giggle]
	main-window-maximized = true
	main-window-geometry = 1199x746+80+53
	show-graph = true
	main-window-view = HistoryView
	history-view-vpane-position = 680
	file-view-vpane-position = 316
[push]
	default = upstream
[mergetool]
	keepBackup = true
[core]
	excludesfile = /Users/harry/.gitignore
	ignorecase = false
[help]
	autocorrect = 1
[rerere]
	enabled = 1
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
